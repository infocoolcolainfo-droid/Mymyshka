rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: public profile but only owner can modify
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Chats: only participants can read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null && isParticipant(chatId);

      // Messages subcollection: only participants
      match /messages/{msgId} {
        allow read, create: if request.auth != null && isParticipant(chatId);
        allow update, delete: if false; // disallow edits/deletes for simplicity
      }
    }

    function isParticipant(chatId) {
      return exists(/databases/$(database)/documents/chats/$(chatId))
        && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.contains(request.auth.uid);
    }
  }
}
